$('#testing-steps').html('<%= escape_javascript render(:partial => 'issues/testing_steps',
                                                       :locals => { :testing_step => @testing_step,
                                                                    :issue => @issue }) %>')
<% if @testing_step.errors.any? %>
  toggle_testing_steps()
<% else %>
  window.location.reload()  
<% end %>
